mkdir -p etc/xdg/foot
cat << EOF > etc/xdg/foot/foot.ini
term = xterm-256color
font = monospace:size=10
initial-window-size-chars = 80x24
[colors]
regular0 = 000000
regular1 = aa0000
regular2 = 00aa00
regular3 = aa5500
regular4 = 0000aa
regular5 = aa00aa
regular6 = 00aaaa
regular7 = aaaaaa
bright0 = 555555
bright1 = ff5555
bright2 = 55ff55
bright3 = ffff55
bright4 = 5555ff
bright5 = ff55ff
bright6 = 55ffff
bright7 = ffffff
EOF

mkdir -p etc/xdg/autostart
cat << EOF > etc/xdg/autostart/foot-server.desktop
[Desktop Entry]
Type=Application
Name=Foot server
NoDisplay=true
Exec=foot -s
EOF

rm -rf usr/share/applications