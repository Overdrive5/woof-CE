mkdir -p etc/xdg/foot
cat << EOF > etc/xdg/foot/foot.ini
term = xterm-256color
font = monospace:size=10
initial-window-size-chars = 80x24
EOF

mkdir -p etc/xdg/autostart
cat << EOF > etc/xdg/autostart/foot-server.desktop
[Desktop Entry]
Type=Application
Name=Foot server
NoDisplay=true
Exec=foot -s
EOF

rm -rf usr/share/applications