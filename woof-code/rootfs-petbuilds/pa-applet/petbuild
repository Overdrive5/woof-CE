download() {
    [ -f pa-applet-97c18dd8a30e65c4a1d27d3d06248e60f1b07087.zip ] || wget -t 1 -T 15 -O pa-applet-97c18dd8a30e65c4a1d27d3d06248e60f1b07087.zip https://github.com/mschwager/pa-applet/archive/97c18dd8a30e65c4a1d27d3d06248e60f1b07087.zip
}

build() {
    unzip -q pa-applet-97c18dd8a30e65c4a1d27d3d06248e60f1b07087.zip
    cd pa-applet-97c18dd8a30e65c4a1d27d3d06248e60f1b07087
    patch -p1 < ../no-libnotify.patch
    ./autogen.sh
    ./configure --prefix=/usr
    make install
}