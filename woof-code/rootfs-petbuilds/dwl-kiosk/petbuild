download() {
    [ -f dwl-b424602ebc2dc26a3c974ee2a87ab745821491b6.zip ] || wget -t 3 -T 60 -O dwl-b424602ebc2dc26a3c974ee2a87ab745821491b6.zip https://github.com/djpohly/dwl/archive/b424602ebc2dc26a3c974ee2a87ab745821491b6.zip
}

build() {
    unzip dwl-b424602ebc2dc26a3c974ee2a87ab745821491b6.zip
    cd dwl-b424602ebc2dc26a3c974ee2a87ab745821491b6
    patch -p1 < ../pointer.patch
    patch -p1 < ../input.patch
    patch -p1 < ../right.patch
    patch -p1 < ../kiosk.patch
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
}