download() {
    [ -f dwl-4dfa45659a6084cd3c800235040d83822f421afc.zip ] || wget -t 3 -T 60 -O dwl-4dfa45659a6084cd3c800235040d83822f421afc.zip https://github.com/djpohly/dwl/archive/4dfa45659a6084cd3c800235040d83822f421afc.zip
}

build() {
    unzip dwl-4dfa45659a6084cd3c800235040d83822f421afc.zip
    cd dwl-4dfa45659a6084cd3c800235040d83822f421afc
    patch -p1 < ../dwl-kiosk.patch
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
}