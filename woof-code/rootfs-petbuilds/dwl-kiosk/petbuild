download() {
    [ -f dwl-e0822926068e84b0fc391e0306f66ea0ec16cf47.zip ] || wget -t 3 -T 60 -O dwl-e0822926068e84b0fc391e0306f66ea0ec16cf47.zip https://github.com/djpohly/dwl/archive/e0822926068e84b0fc391e0306f66ea0ec16cf47.zip
}

build() {
    unzip dwl-e0822926068e84b0fc391e0306f66ea0ec16cf47.zip
    cd dwl-e0822926068e84b0fc391e0306f66ea0ec16cf47
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}