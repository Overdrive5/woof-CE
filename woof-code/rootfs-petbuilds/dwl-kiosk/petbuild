download() {
    [ -f dwl-52e0d00942584b4a8a9ca1f59ffdea26277604ed.zip ] || wget -t 3 -T 60 -O dwl-52e0d00942584b4a8a9ca1f59ffdea26277604ed.zip https://github.com/djpohly/dwl/archive/52e0d00942584b4a8a9ca1f59ffdea26277604ed.zip
}

build() {
    unzip dwl-52e0d00942584b4a8a9ca1f59ffdea26277604ed.zip
    cd dwl-52e0d00942584b4a8a9ca1f59ffdea26277604ed
    patch -p1 < ../dwl-kiosk.patch
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
}