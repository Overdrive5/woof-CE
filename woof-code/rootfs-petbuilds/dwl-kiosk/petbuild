download() {
    [ -f dwl-4d3adea68325b70eafbd56a31023f96b92532b8d.zip ] || wget -t 3 -T 60 -O dwl-4d3adea68325b70eafbd56a31023f96b92532b8d.zip https://github.com/djpohly/dwl/archive/4d3adea68325b70eafbd56a31023f96b92532b8d.zip
}

build() {
    unzip dwl-4d3adea68325b70eafbd56a31023f96b92532b8d.zip
    cd dwl-4d3adea68325b70eafbd56a31023f96b92532b8d
    patch -p1 < ../point.patch
    patch -p1 < ../power.patch
    patch -p1 < ../input.patch
    patch -p1 < ../right.patch
    patch -p1 < ../moveresize.patch
    patch -p1 < ../csd.patch
    patch -p1 < ../kiosk.patch
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
}