download() {
    [ -f dwl-7cc6c640e2412935bf195ec55dafeb5852c71dd1.zip ] || wget -t 3 -T 60 -O dwl-7cc6c640e2412935bf195ec55dafeb5852c71dd1.zip https://github.com/djpohly/dwl/archive/7cc6c640e2412935bf195ec55dafeb5852c71dd1.zip
}

build() {
    unzip dwl-7cc6c640e2412935bf195ec55dafeb5852c71dd1.zip
    cd dwl-7cc6c640e2412935bf195ec55dafeb5852c71dd1
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
}