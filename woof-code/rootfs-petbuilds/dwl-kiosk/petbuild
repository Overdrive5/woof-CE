download() {
    [ -f dwl-e98719f5523597d02e82632a4af2676a1299497e.zip ] || wget -t 3 -T 60 -O dwl-e98719f5523597d02e82632a4af2676a1299497e.zip https://github.com/djpohly/dwl/archive/e98719f5523597d02e82632a4af2676a1299497e.zip
}

build() {
    unzip dwl-e98719f5523597d02e82632a4af2676a1299497e.zip
    cd dwl-e98719f5523597d02e82632a4af2676a1299497e
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}