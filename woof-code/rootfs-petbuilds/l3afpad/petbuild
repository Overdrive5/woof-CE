download() {
    [ -f l3afpad-0.8.18.1.11.tar.gz ] || wget -t 1 -T 15 -O l3afpad-0.8.18.1.11.tar.gz https://github.com/stevenhoneyman/l3afpad/archive/v0.8.18.1.11.tar.gz
}

build() {
    tar -xzf l3afpad-0.8.18.1.11.tar.gz
    cd l3afpad-0.8.18.1.11
    ./autogen.sh
    ./configure --prefix=/usr --disable-print --disable-statistics
    make install
    sed -e 's/^Categories=.*/Categories=TextEditor;/' -e 's/^Name=L3afpad$/& text editor/' -e '/^Name\[/d' -e 's/=l3afpad %f/=l3afpad/' -i /usr/share/applications/l3afpad.desktop
    ln -s l3afpad /usr/bin/leafpad
}