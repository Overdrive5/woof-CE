download() {
    [ -f gcolor3-00e737f2273aa0dcb04bf75602e8f44ef6237626.tar.gz ] || wget -t 3 -T 60 gcolor3-00e737f2273aa0dcb04bf75602e8f44ef6237626.tar.gz https://gitlab.gnome.org/World/gcolor3/-/archive/00e737f2273aa0dcb04bf75602e8f44ef6237626/gcolor3-00e737f2273aa0dcb04bf75602e8f44ef6237626.tar.gz
}

build() {
    tar -xzf gcolor3-00e737f2273aa0dcb04bf75602e8f44ef6237626.tar.gz
    cd gcolor3-00e737f2273aa0dcb04bf75602e8f44ef6237626
    patch -p1 < ../no-handy.patch
    meson --buildtype=release --prefix=/usr -Dwerror=false build
    ninja -C build install
    sed -i 's/^Categories=.*/Categories=X-GraphicUtility;/' /usr/share/applications/nl.hjdskes.gcolor3.desktop
}
