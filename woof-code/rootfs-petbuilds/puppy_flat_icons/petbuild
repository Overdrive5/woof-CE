download() {
	if [ -f puppy_flat_icons.tar.xz ] ;then
		MTIME=$(date -r puppy_flat_icons.tar.xz "+%s")
		CURTIME=$(date +%s)
		DIFTIME=$(($CURTIME - $MTIME))
		if [ $DIFTIME -gt  604800 ];then # 7 days =  604800 seconds
			echo "deleting puppy_flat_icons.tar.xz and re-downloading"
			rm -f puppy_flat_icons.tar.xz
			wget -t 3 -T 10 https://github.com/puppylinux-woof-CE/puppy_flat_theme/releases/latest/download/puppy_flat_icons.tar.xz
		else
			echo "puppy flat is still current"
		fi
	else
		wget -t 3 -T 10 https://github.com/puppylinux-woof-CE/puppy_flat_theme/releases/latest/download/puppy_flat_icons.tar.xz
	fi    
}

build() {
    tar xJf puppy_flat_icons.tar.xz -C /
}
