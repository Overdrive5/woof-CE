download() {
    [ -f activate-linux-2e8716dc7ba9a39bd0aaff56918bfe8e7c1ad892.zip ] || wget -t 3 -T 60 -O activate-linux-2e8716dc7ba9a39bd0aaff56918bfe8e7c1ad892.zip https://github.com/Kljunas2/activate-linux/archive/2e8716dc7ba9a39bd0aaff56918bfe8e7c1ad892.zip
}

build() {
    unzip -q activate-linux-2e8716dc7ba9a39bd0aaff56918bfe8e7c1ad892.zip
    cd activate-linux-2e8716dc7ba9a39bd0aaff56918bfe8e7c1ad892
    patch -p1 < ../small.patch
    $CC $CFLAGS `pkg-config --cflags gtk+-3.0 gtk-layer-shell-0` src/activate_linux.c $LDFLAGS `pkg-config --libs gtk+-3.0 gtk-layer-shell-0` -o /usr/bin/activate-linux
}
